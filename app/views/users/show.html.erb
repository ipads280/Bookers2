<% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
<% end %>

<div class="row">

<%= render 'books/list', user: @user, new: @new %>

<div class="col-md-8 offset-md-1">
<h1>Books</h1>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
     <% @books.each do |book| %>
     <tbody>
       <tr>
        <%= link_to user_path(book.user.id) do%>
          <td><%=image_tag book.user.get_profile_image(100,100)%></td>
        <%end%>
        <td><%=link_to"#{book.title}", "/books/#{book.id}"%></td>
        <td><%= book.body %></td>
       </tr>
      </tbody>
     <% end %>
  </table>

</div>

</div>