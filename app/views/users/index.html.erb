

<div class="row">
 <%= render 'books/list', user: @user, new: @new %>
  <div class="col-md-8 offset-md-1">
   <h2>Users</h2>
   <table class="table">
     <thead>
       <tr>
         <th>image</th>
         <th>name</th>
         <th colspan="3"></th>
       </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
       <tr>
          <%= link_to user_path(user.id) do%>
          <td>
    　　      <%=image_tag user.get_profile_image(100,100)%>
          </td>
  　       <%end%>
          <td>
          	<%=link_to "#{user.name}",user_path(user.id) %>
          </td>
          <td> 
            <%= link_to("Show", "/users/#{user.id}") %><br>
          </td>
      
      <% end %>
       </tr>
      </tbody>
  
    </table>
  </div>
</div>